	<scm>
		<url>https://gitee.com/easyj-projects/easyj</url>
		<connection>scm:git@gitee.com:easyj-projects/easyj.git</connection>
		<developerConnection>scm:git@gitee.com:easyj-projects/easyj.git</developerConnection>
	</scm>

	<issueManagement>
		<system>gitee</system>
		<url>https://gitee.com/easyj-projects/easyj/issues</url>
	</issueManagement>

	<dependencyManagement>
		<dependencies>
			<!-- All -->
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>easyj-all</artifactId>
				<version>${project.version}</version>
			</dependency>

			<!-- Core -->
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>easyj-core</artifactId>
				<version>${project.version}</version>
			</dependency>

			<!-- Web -->
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>easyj-web-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>easyj-web-cache304</artifactId>
				<version>${project.version}</version>
			</dependency>

			<!-- Office -->
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>easyj-office-excel</artifactId>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<!-- 资源仓库管理 -->
	<repositories>
		<repository>
			<id>kt-nexus</id>
			<name>kt-nexus</name>
			<url>http://www.kingtsoft.com:33084/nexus/content/groups/public/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
	</repositories>

	<!-- 资源上传仓库配置 -->
	<distributionManagement>
		<repository>
			<id>kt-nexus-releases</id>
			<url>http://www.kingtsoft.com:33084/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>kt-nexus-snapshots</id>
			<url>http://www.kingtsoft.com:33084/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>
