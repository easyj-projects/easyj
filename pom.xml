<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>icu.easyj</groupId>
		<artifactId>easyj-build</artifactId>
		<version>0.1.1-SNAPSHOT</version>
		<relativePath/>
	</parent>

	<artifactId>easyj-parent</artifactId>
	<version>${revision}</version>
	<packaging>pom</packaging>
	<name>Parent</name>
	<description>此项目的目标是为了简化Java项目的开发。</description>
	<url>https://gitee.com/easyj-projects/easyj</url>

	<properties>
		<!-- 编译配置 -->
		<java.version>1.8</java.version>
		<maven.compiler.source>${java.version}</maven.compiler.source>
		<maven.compiler.target>${java.version}</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<!-- 项目版本 -->
		<revision>0.1.0-SNAPSHOT</revision>
	</properties>

	<modules>
		<module>all</module>
		<module>bom</module>

		<module>core</module>
		<module>crypto</module>
		<module>data</module>
		<module>poi</module>
		<module>web</module>
	</modules>

	<inceptionYear>2021</inceptionYear>

	<licenses>
		<license>
			<name>Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<organization>
		<name>EasyJ开源社区</name>
		<url>https://gitee.com/easyj-projects</url>
	</organization>

	<developers>
		<developer>
			<id>wangliang181230</id>
			<name>王良</name>
			<url>https://gitee.com/wangliang181230</url>
			<email>841369634@qq.com</email>
			<organization>浙江蕙康科技有限公司</organization>
			<organizationUrl>https://www.jyhk.com</organizationUrl>
			<roles>
				<role>Java架构师</role>
			</roles>
		</developer>
	</developers>

	<scm>
		<url>https://gitee.com/easyj-projects/easyj</url>
		<connection>scm:git@gitee.com:easyj-projects/easyj.git</connection>
		<developerConnection>scm:git@gitee.com:easyj-projects/easyj.git</developerConnection>
	</scm>

	<issueManagement>
		<system>gitee</system>
		<url>https://gitee.com/easyj-projects/easyj/issues</url>
	</issueManagement>

	<!-- 资源仓库管理 -->
	<repositories>
		<repository>
			<id>kt-nexus</id>
			<name>kt-nexus</name>
			<url>http://www.kingtsoft.com:33084/nexus/content/groups/public/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
	</repositories>

	<!-- Profiles -->
	<profiles>
		<!-- profile：Release -->
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<!--
					使用插件：Javadoc
					注：在`icu.easyj:easyj-build`中，已经添加过，但是这里不添加，gitee上就无法生成javadoc。
					-->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>