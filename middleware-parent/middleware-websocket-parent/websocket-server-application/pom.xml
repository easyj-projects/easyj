<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>icu.easyj.middleware</groupId>
		<artifactId>middleware-parent</artifactId>
		<version>${revision}</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<groupId>icu.easyj.boot.middleware</groupId><!--三级分组：/boot/middleware-->
	<artifactId>easyj-websocket-server-application</artifactId>

	<name>${project.groupId} :: ${project.artifactId}</name>
	<description>EasyJ中间件：WebSocket服务端应用</description>

	<dependencies>
		<!-- websocket-server-starter -->
		<dependency>
			<groupId>icu.easyj.boot.middleware</groupId>
			<artifactId>easyj-spring-boot-starter-websocket-server</artifactId>
			<version>${project.version}</version>
		</dependency>

		<!-- 模板页面-starter -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-thymeleaf</artifactId>
		</dependency>


		<!-- Logging -->
		<dependency>
			<groupId>icu.easyj.boot</groupId>
			<artifactId>easyj-spring-boot-starter-logging-all</artifactId>
			<version>${project.version}</version>
		</dependency>


		<!-- Spring-Test -->
		<dependency>
			<groupId>icu.easyj.boot</groupId>
			<artifactId>easyj-spring-boot-test</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<finalName>easyj-websocket-server-${project.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<version>${spring-boot.version}</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.8.2</version>
				<configuration>
					<!-- 当前为spring-boot应用，无需deploy -->
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.sonatype.plugins</groupId>
				<artifactId>nexus-staging-maven-plugin</artifactId>
				<version>1.6.8</version>
				<configuration>
					<!-- 当前为spring-boot应用，无需暂存 -->
					<skipStaging>true</skipStaging>
					<skipLocalStaging>true</skipLocalStaging>
					<skipRemoteStaging>true</skipRemoteStaging>
					<skipNexusStagingDeployMojo>true</skipNexusStagingDeployMojo>
					<skipStagingRepositoryClose>true</skipStagingRepositoryClose>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>